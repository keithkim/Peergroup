<project name="peergroup" default="all" basedir=".">
	
	<property name="src" location="src" />
	<property name="tmp" location="temp" />
	<property name="tmpclasses" location="${tmp}/classes" />
	<property name="exportdir" location="export" />
	<property name="docdir" location="doc" />
	<property name="clientpkg" value="peergroup" />
	<property name="exceptionpkg" value="peergroup/exceptions" />
	<property name="swp_reportdir" location="swp_report" />
	<property name="host" value="cbyte.selfip.net" />
	<property name="port" value="7777" />
	<!-- targets to run-->
	
	<!-- default target, will export the client and the java doc -->
	<target name="all" depends="jar, javadoc, clean"/>
	
	<!-- upload target, will delete all unneccessary data as tmp dirs reports and javadoc so we only commit pure source-code into SVN -->
	<target name="wipe_out">
		<delete dir="${tmp}" />
		<delete dir="${exportdir}" />
		<delete dir="${reportdir}" />
		<delete dir="${docdir}" />
		<delete>
			<fileset dir="${swp_reportdir}">
	    		<exclude name="*.tex"/>
				<exclude name="*.png"/>
			</fileset>
		</delete>
	</target>
	
	<!-- explicit targets should not be (but can be) runned alone -->
	
	<!-- create all missing folders -->
	<target name="init">
			<mkdir dir="${tmp}" />
			<mkdir dir="${tmpclasses}" />
			<mkdir dir="${exportdir}" />
		</target>
	
	<!-- compile the source code -->
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${tmpclasses}" compiler="extJavac" source="1.6" target="1.6" debug="on">
		</javac>
	</target>
	
	<!-- export compilde code as a jar file -->
	<target name="jar" depends="compile">
			<jar jarfile="${exportdir}/peergroup.jar">
				<fileset dir="${tmpclasses}">
					<include name="${clientpkg}/**/*.class" />
				</fileset>
				<manifest>
					<attribute name="Main-Class" value="peergroup/Starter"/>
				</manifest>
			</jar>
	</target>
	
	<!-- generate javadoc out of Source-Code comments -->
	<target name="javadoc" depends="init">
		<mkdir dir="${docdir}" />
		<javadoc destdir="${docdir}" author="true" version="true" use="true" source="1.6" windowtitle="Peergroup Project">
			<fileset dir="${src}">
				<include name="*.java" />
			</fileset>
		</javadoc>
	</target>
	
	<!-- Delete temporary folders -->
	<target name="clean">
		<delete dir="${tmp}" />
	</target>
	
</project>
